{{!-- Este es el diseño que van a tener los mensajes. --}}
{{#if success_msg}}
  <div
    class="alert alert-success alert-dismissible fade show cont_msg_btn"
    role="alert"
  >
    {{success_msg}}
    <button
      type="button"
      class="boton_msg"
      data-bs-dismiss="alert"
      aria-label="Close"
    ><i class="fa fa-close"></i></button>
  </div>
{{/if}}

{{!-- Este es el diseño que van a tener los mensajes de errores. --}}
{{#if error_msg}}
  <div
    class="alert alert-danger alert-dismissible fade show cont_msg_btn"
    role="alert"
  >
    {{error_msg}}
    <button
      type="button"
      class="boton_msg"
      data-bs-dismiss="alert"
      aria-label="Close"
    ><i class="fa fa-close"></i></button>
  </div>
{{/if}}